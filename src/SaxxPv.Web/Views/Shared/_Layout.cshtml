@using System.Reflection
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>SaxxPV</title>

    <script src="https://cdn.jsdelivr.net/npm/echarts/dist/echarts.min.js"></script>
    <script src="https://kit.fontawesome.com/cf13a8b51b.js" crossorigin="anonymous"></script>

    <style>
        * {
            box-sizing: border-box;
        }

        body {
            font-family: sans-serif;
            font-size: 16px;
            margin: 0;
            padding: 0;
            line-height: 26px;
        }

        main {
            width: 100%;
            max-width: 700px;
            margin: 0 auto;
            padding: 0;
        }

        h1 {
            color: white;
            background-color: #0392cf;
            text-align: center;
            font-size: 24px;
            margin: 0;
            padding: 16px 0 0 0;
        }

        h2 {
            color: white;
            background-color: #0392cf;
            text-align: center;
            font-size: 12px;
            margin: 0;
            padding: 0 0 16px 0;
        }

        h3 {
            text-align: center;
            margin: 0;
        }

        svg {
            width: 30px;
        }

        small {
            font-size: 12px;
        }

        a {
            color: #0392cf;
        }
    </style>
</head>
<body>

<main>
    @RenderBody()
</main>

@await RenderSectionAsync("Scripts", required: false)
<!-- SaxxPV v@(typeof(Program).Assembly.GetCustomAttribute<AssemblyInformationalVersionAttribute>()?.InformationalVersion) -->
</body>
</html>
